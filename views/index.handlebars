<h1>Cats!</h1>

<h2>burger spicy!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burger/burgers devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Bugers Type</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Choose Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> devoured!<br>
    <input type="radio" name="sleepy" value="0"> cooked
  </div>

  <button type="submit">Add burger</button>
</form>
